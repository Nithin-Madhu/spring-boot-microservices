version: "3.8"
name: "spring-boot-microservices"

services:
  catalog-db:
    image: postgres:17.4
    container_name: catalog-db  # Fixed: 'container-name' → 'container_name'
    environment:
      - POSTGRES_USER=postgres  # Fixed: Removed extra space
      - POSTGRES_PASSWORD=sql-the-prequel  # Fixed: Removed extra space
      - POSTGRES_DB=postgres
    ports:
      - "15432:5432"  # Fixed: Added space and quotes
    healthcheck:
      test: ["CMD-SHELL", "pg_isready -U postgres"]
      interval: 10s
      timeout: 5s
      retries: 5  # Fixed: 'retires' → 'retries'
    deploy:
      resources:
        limits:
          memory: "500m"
